# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Show one of the children
# ------------------------------------------------------------------------------------------------------------------------------------------------------

extends Node

# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Show the child with the given index
# ------------------------------------------------------------------------------------------------------------------------------------------------------
func show_child(index):
	var children = get_children()
	var counter = 0
	for child in children:
		_setVisibility(child, index == counter)
		counter = counter + 1
# ------------------------------------------------------------------------------------------------------------------------------------------------------



# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Show the child with the given name
# ------------------------------------------------------------------------------------------------------------------------------------------------------
func show_child_by_name(name):
	var children = get_children()
	for child in children:
		_setVisibility (child, child.name == name)
# ------------------------------------------------------------------------------------------------------------------------------------------------------



# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Set the visibility and activity of a node and all its children.
# ------------------------------------------------------------------------------------------------------------------------------------------------------
func _setVisibility(node: Node, visible: bool):
	node.visible = visible
	node.set_process(visible)
	for child in node.get_children():
		_setVisibility(child, visible)
# ------------------------------------------------------------------------------------------------------------------------------------------------------
