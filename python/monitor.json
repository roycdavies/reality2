sentant:
  name: "Monitor the Node"
  automations:
    - from: start
      event: init
      to: ready

    - from: ready
      event: __node.sentantLoad
      to: ready
      actions:
        - command: set
          parameters:
            key: id
            value: __id__
        - command: signal
          public: true
          parameters:
            event: sentantLoad
